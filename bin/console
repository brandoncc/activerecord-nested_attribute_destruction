#!/usr/bin/env ruby
# frozen_string_literal: true

require "rubygems"
require "active_record/railtie"
require "bundler/setup"
require "nested_attribute_destruction"

ActiveRecord::Base.establish_connection adapter: "sqlite3", database: ":memory:"

require_relative '../spec/support/models/harbor.rb'
require_relative '../spec/support/models/lighthouse.rb'
require_relative '../spec/support/models/ship.rb'

load "spec/support/schema.rb"

require "pry"
Pry.start
